    <script>
        const getCurrentDay = () => {
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Data();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById('day');

            day.innerText = days;
        };
        
        const getCurrentTime = () => {
            let months = {
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "Jun",
                "Jul",
                "Aug",
                "Sept",
                "Oct",
                "Nov",
                "Dec",
            };

            let now = new Data();
            var hours = now.getHours();
            var mins = now.getMinutes();

            var month = months[now.getMonth() + 1];
            var date = now.getData();
            //var year = now.getFullYear();

            var period = "am";
            if(hours > 11) {
                period = "pm";
                if(hours > 12) hours -= 12; //format for 12-hr clock
            }
            if(mins < 10) {
                mins = "0" + mins; //format minutes
            }
            return `${month} ${date} | ${hours}: ${mins} ${period}`;
        };

        getCurrentDay();
    </script>    
